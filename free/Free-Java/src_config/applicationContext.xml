<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd"
	default-autowire="byName">
	<context:annotation-config />
	
	<!-- Hibernate连接配置 -->
	<import resource="hibernateConfig.xml" />
	<!-- 默认配置 -->
	<import resource="defaultConfig.xml" />
	<!-- 数据库信息配置 -->
	<import resource="dataBaseConfig.xml" />
	
	<bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor" /> 
	<context:component-scan base-package="org.freedom.services"/>
	<context:component-scan base-package="org.freedom.dao"/>
	<context:component-scan base-package="org.freedom.view.domain.system"/>
</beans>
