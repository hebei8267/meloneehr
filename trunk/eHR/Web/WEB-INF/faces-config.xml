<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">

	<!-- Facelets support -->
	<application>
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
		<variable-resolver>
			org.springframework.web.jsf.DelegatingVariableResolver
		</variable-resolver>
	</application>
	<!-- 全局迁移 用户登录 -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>toSec001</from-outcome>
			<to-view-id>/page/security/sec001.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- 全局迁移 密码修改 -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>toSec002</from-outcome>
			<to-view-id>/page/security/sec002.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- 全局迁移 用户注销 -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>toHome</from-outcome>
			<to-view-id>/home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- 全局迁移 工作区 -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>toWorkArea</from-outcome>
			<to-view-id>/page/frame/frm001.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- 用户登录 -->
	<navigation-rule>
		<from-view-id>/page/security/sec001.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>loginSucceed</from-outcome>
			<to-view-id>/page/frame/frm001.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>modPassword</from-outcome>
			<to-view-id>/page/security/sec002.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- 修改密码 -->
	<navigation-rule>
		<from-view-id>/page/security/sec002.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>modPwdSucceed</from-outcome>
			<to-view-id>/home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<!-- 菜单树 -->
	<navigation-rule>
		<from-view-id>/page/frame/frm001.xhtml</from-view-id>
		<navigation-case>
			<!-- 国家信息 -->
			<from-outcome>countryCfg</from-outcome>
			<to-view-id>/page/common/com001.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<!-- 民族信息 -->
			<from-outcome>nationCfg</from-outcome>
			<to-view-id>/page/common/com002.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
