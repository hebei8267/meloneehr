<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
	  "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id="hibernateProperties"
		class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="properties">
			<props>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.PostgreSQLDialect
				</prop>
				<prop key="hibernate.query.substitutions">
					true 1, false 0
				</prop>
				<prop key="hibernate.show_sql">false</prop>
				<prop key="hibernate.c3p0.minPoolSize">5</prop>
				<prop key="hibernate.c3p0.maxPoolSize">20</prop>
				<prop key="hibernate.c3p0.timeout">600</prop>
				<prop key="hibernate.c3p0.max_statement">50</prop>
				<prop key="hibernate.c3p0.testConnectionOnCheckout">
					false
				</prop>
			</props>
		</property>
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="hibernateProperties">
			<ref local="hibernateProperties"></ref>
		</property>
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
		<property name="entityInterceptor">
			<bean class="cn.hb.core.interceptor.HibernateInterceptor"
				scope="singleton" />
		</property>
		<property name="annotatedClasses">
			<list>
				<!-- -->
				<value>cn.hb.entity.dictionary.communal.Country</value>
				<value>cn.hb.entity.dictionary.communal.Nation</value>
				<value>cn.hb.entity.dictionary.communal.Nativeplace</value>
				<!-- -->
				<value>cn.hb.entity.dictionary.organization.OrganizationType</value>
				<value>cn.hb.entity.dictionary.organization.JobPositionType</value>
				<value>cn.hb.entity.dictionary.organization.Organization_JobPosition_RelateType</value>
				<!-- -->
				<value>cn.hb.entity.dictionary.personnel.MarriageState</value>
				<value>cn.hb.entity.dictionary.personnel.IdentifieationType</value>
				<value>cn.hb.entity.dictionary.personnel.Currculum</value>
				<value>cn.hb.entity.dictionary.personnel.EducateSpecialty</value>
				<value>cn.hb.entity.dictionary.personnel.SexType</value>
				<!-- -->
				<value>cn.hb.entity.dictionary.employment.HoldingJobType</value>
				<value>cn.hb.entity.dictionary.employment.EmployType</value>
				<value>cn.hb.entity.dictionary.employment.ContractType</value>
				<value>cn.hb.entity.dictionary.employment.EmployeeWorkState</value>
				<!-- -->
				<value>cn.hb.entity.dictionary.financial.SalaryType</value>
				<value>cn.hb.entity.dictionary.financial.Job_Salary_RelateType</value>
				<!-- -->
				<value>cn.hb.entity.hr.personnel.Identifieation</value>
				<value>cn.hb.entity.hr.personnel.Education</value>
				<value>cn.hb.entity.hr.personnel.Training</value>
				<value>cn.hb.entity.hr.personnel.ContactAddress</value>
				<value>cn.hb.entity.hr.personnel.Person</value>
				<!-- -->
				<value>cn.hb.entity.hr.organization.Organization</value>
				<value>cn.hb.entity.hr.organization.JobPosition</value>
				<value>cn.hb.entity.hr.organization.Organization_JobPosition_Relate</value>
				<value>cn.hb.entity.hr.organization.Job</value>
				<!-- -->
				<value>cn.hb.entity.ui.MenuNode</value>
				<!-- -->
				<value>cn.hb.entity.security.User</value>
			</list>
		</property>
	</bean>
</beans>
